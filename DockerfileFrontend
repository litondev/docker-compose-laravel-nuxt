FROM node:alpine

WORKDIR /var/www/frontend

RUN apt-get update && apt-get install -y \
    locales \
    zip \
    vim \
    unzip \
    nano \
    git \
    curl

RUN apt-get clean && rm -rf /var/lib/apt/lists/*

COPY ./app/frontend /var/www/frontend

RUN npm-install

RUN npm-install pm2 -g

RUN npm run build

EXPOSE 3000

CMD ["pm-2 start"]